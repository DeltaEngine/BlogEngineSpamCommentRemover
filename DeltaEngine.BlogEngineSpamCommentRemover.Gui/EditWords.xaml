<Window x:Class="DeltaEngine.BlogEngineSpamCommentRemover.Gui.EditWords"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BlogEngine.net Spam Comment Remover - Edit Words" Height="479" Width="527"
				WindowStyle="ToolWindow" >
	<Grid>
		<TextBox Name="Lines" Margin="10,10,10,45" TextWrapping="Wrap" Text="" VerticalScrollBarVisibility="Visible" />
		<Button Content="Cancel" HorizontalAlignment="Right" Margin="0,0,90,7" VerticalAlignment="Bottom" Width="75" Height="30" Click="CancelClick"/>
		<Button Content="Save" HorizontalAlignment="Right" Margin="0,0,10,7" VerticalAlignment="Bottom" Width="75" Height="30" Click="SaveClick"/>
	</Grid>
</Window>
